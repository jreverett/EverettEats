@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components
@using EverettEats.Components.Pages
@using EverettEats.Components.Layout
<!DOCTYPE html>
<html lang="en">

<head>    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Everett Eats - Delicious Homemade Recipes</title>
    <!-- SEO Meta Tags -->
    <meta name="description" content="Discover delicious homemade recipes for every occasion at Everett Eats. Search, browse, and enjoy easy-to-follow recipes for all skill levels." />
    <meta name="keywords" content="recipes, cooking, homemade, Everett Eats, food, easy recipes, healthy, dinner, dessert" />
    <meta name="author" content="Jamie Everett" />
    <link rel="canonical" href="https://everetteats.com/" />
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Everett Eats - Delicious Homemade Recipes" />
    <meta property="og:description" content="Discover delicious homemade recipes for every occasion at Everett Eats." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://everetteats.com/" />
    <meta property="og:image" content="https://everetteats.com/icon-512.png" />
    <meta property="og:site_name" content="Everett Eats" />
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Everett Eats - Delicious Homemade Recipes" />
    <meta name="twitter:description" content="Discover delicious homemade recipes for every occasion at Everett Eats." />
    <meta name="twitter:image" content="https://everetteats.com/icon-512.png" />
    <base href="/" />
    <link rel="stylesheet" href="app.css" asp-append-version="true" />
    <link rel="stylesheet" href="EverettEats.styles.css" asp-append-version="true" />    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>🍽️</text></svg>" />
    <link rel="alternate icon" href="favicon.ico" asp-append-version="true" />
    
    <!-- PWA Meta Tags -->
    <link rel="manifest" href="/manifest.json" asp-append-version="true" />
    <meta name="theme-color" content="#b45309" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />    <meta name="apple-mobile-web-app-title" content="Everett Eats" />
    
    <HeadOutlet />
</head>

<body>
    <div id="app">
        <ErrorBoundary>
            <ChildContent>
                <Routes />
            </ChildContent>
            <ErrorContent>
                <LayoutView Layout="typeof(MainLayout)">
                    <Error />
                </LayoutView>
            </ErrorContent>
        </ErrorBoundary>
    </div>
    
    <script src="_framework/blazor.web.js"></script>
    <script src="js/site.js" asp-append-version="true"></script>
    
    <!-- Service Worker Registration -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', function() {
                navigator.serviceWorker.register('/sw.js')
                    .then(function(registration) {
                        console.log('ServiceWorker registration successful');
                    })
                    .catch(function(err) {
                        console.log('ServiceWorker registration failed: ', err);
                    });            });
        }    </script>
</body>

</html>
